{
  "name": "attractap-touch-firmware",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/attractap-touch-firmware",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/attractap-touch-firmware && python3 build_firmwares.py",
        "cwd": "."
      },
      "outputs": ["{projectRoot}/firmware_output", "{projectRoot}/.pio/build"],
      "inputs": [
        "{projectRoot}/platformio.ini",
        "{projectRoot}/idf_component.yml",
        "{projectRoot}/build_firmwares.py",
        "{projectRoot}/src/**/*",
        "{projectRoot}/include/**/*",
        "{projectRoot}/lib/**/*",
        "{projectRoot}/data/**/*",
        "{projectRoot}/partitions/**/*",
        "{projectRoot}/tools/**/*.py",
        "{projectRoot}/tools/requirements.txt"
      ],
      "cache": false,
      "parallelism": true
    }
  }
}
